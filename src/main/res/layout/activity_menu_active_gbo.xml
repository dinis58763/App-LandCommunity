<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">  <!-- MenuActiveActivity -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/roboto_regular"
                android:text="MENU GBO"
                android:textAlignment="center"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="So good to see you here!"
                android:textSize="17sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="50dp"/>

            <Button
                android:id="@+id/btn_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/btn_custom_gbo"
                android:fontFamily="@font/roboto_regular"
                android:onClick="sendMessageRegister"
                android:text="Stats"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn_registerInstallment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/btn_custom_gbo"
                android:fontFamily="@font/roboto_regular"
                android:onClick="sendMessageRegister"
                android:text="Open Map"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn_conversation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/btn_custom_gbo"
                android:fontFamily="@font/roboto_regular"
                android:onClick="sendMessageRegister"
                android:text="#GroupConversation"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_settings"
                android:layout_marginLeft="140dp"
                android:layout_marginRight="140dp"
                android:layout_marginBottom="200dp"
                android:fontFamily="@font/roboto_regular"
                android:onClick="sendMessageRegister"
                android:text="Settings" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>